@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">

    <!-- Indicators -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="4"></button>
    </div>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            @* Each img tag should be styled by the 'd-block' class and the 'w-100' class.
            'd-block' displays the image in block mode.
            'w-100' means 100% width, making the image span the entire width of the container.
            *@
            <img src="~/images/santorini.jpg" class="d-block w-100" alt="Santorini" />
            <div class="carousel-caption">
                <h3>
                    Santorini
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/living-room.jpg" class="d-block w-100" alt="Living Room" />
            <div class="carousel-caption">
                <h3>
                    Living Room
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/kitchen.jpg" class="d-block w-100" alt="Kitchen" />
            <div class="carousel-caption">
                <h3>
                    Kitchen
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/dining-room.jpg" class="d-block w-100" alt="Dining Room" />
            <div class="carousel-caption">
                <h3>
                    Dining Room
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/cafe.jpg" class="d-block w-100" alt="Cafe" />
            <div class="carousel-caption">
                <h3>
                    Cafe
                </h3>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <button type="button" class="carousel-control-prev" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button type="button" class="carousel-control-next" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<br />

<div class="row">
    <div class="col-md-7">
        <h3>Welcome to WSU Hotel!</h3>
        <p>
            This a great place for Living!
        </p>
    </div>
    <div class="col-md-5">
        <h2 class="text-center">Useful Links</h2>
        <ul>
            <li><a asp-area="" asp-page="/Index">Home</a></li>
            <li><a asp-area="" asp-page="/Rooms/Index">Rooms</a></li>
            <li><a asp-area="" asp-page="https://www.westernsydney.edu.au">WSU Home</a></li>
            <li><a asp-area="" asp-page="https://www.cityofparramatta.nsw.gov.au">Parramatta Council</a></li>
            <li><a asp-area="" asp-page="/Privacy">Privacy</a></li>
        </ul>
    </div>
</div>
