@page
@model WesternInn_zilun_youxian_zhihan.Pages.Rooms.SearchRoomModel
@{
}
<h4>Search a Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Room.NumberOfBeds" class="control-label"></label>
                <select asp-for="Room.NumberOfBeds" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                <span asp-validation-for="Room.NumberOfBeds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.CheckInDate" class="control-label"></label>
                <input asp-for="Room.CheckInDate" class="form-control" />
                <span asp-validation-for="Room.CheckInDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.CheckOutDate" class="control-label"></label>
                <input asp-for="Room.CheckOutDate" class="form-control" />
                <span asp-validation-for="Room.CheckOutDate" class="text-danger"></span>
            </div>
            
            <div class="form-group m-2">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if(Model.Rooms != null)
{
    <table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => Model.Rooms.First().Id)</th>
            <th>@Html.DisplayNameFor(m => Model.Rooms.First().BedCount)</th>
            <th>@Html.DisplayNameFor(m => Model.Rooms.First().Level)</th>
            <th>@Html.DisplayNameFor(m => Model.Rooms.First().Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var room in Model.Rooms)
        {
            <tr>
                    <td>
                        <a asp-page="/Bookings/Create" asp-route-searchedRoomId="@room.Id" asp-route-checkInDate="@Model.Room.CheckInDate" asp-route-checkOutDate="@Model.Room.CheckOutDate">
                            @Html.DisplayFor(m => room.Id)
                        </a>
                        
                    </td>
                <td>
                    @Html.DisplayFor(m => room.Level)
                </td>
                <td>
                    @Html.DisplayFor(m => room.BedCount)
                </td>
                <td>
                    @Html.DisplayFor(m => room.Price)
                </td>
            </tr>
        }
    </tbody>
</table>
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}